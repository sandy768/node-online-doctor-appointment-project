<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/doctors.css">
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/nav_user.ejs')%>
    <main>
            <div id="doctors">
                <h1 class="para1">Available Doctors</h1>
            </div>
                <%if(data2.length>0){%>
                            <div class="mt-5 mb-5 mx-5 d-flex flex-wrap">
                                <%for(let i in data2){%>
                                <div class="card bg-light mx-5 mt-5" style="width: 20rem;">
                                    <img src="/doctors/<%=data2[i].doc_photo%>" class="card-img-top" alt="...">
                                    <div class="card-body">
                                      <h3 class="card-title text-center text-secondary fw-bold mx-2">Dr. <%=data2[i].fname.charAt(0).toUpperCase()+data2[i].fname.slice(1)%>
                                        <%=data2[i].lname.charAt(0).toUpperCase()+data2[i].lname.slice(1)%>
                                      </h3>
                                      <h5 class="card-text text-center text-secondary fw-bold mt-4 mx-2"><%=data2[i].doc_degree.toUpperCase()%> (<%=data2[i].doc_experience%> Years)</h5>
                                      <h5 class="card-text text-center text-secondary fw-bold mt-2 mx-2"><%=data2[i].doc_specialization.charAt(0).toUpperCase()+data2[i].doc_specialization.slice(1)%></h5>
                                      <h5 class="card-text text-center text-secondary fw-bold mt-2 mx-2"><%=data2[i].doc_email%></h5>
                                        
                                        <form action="/user/getappointment" method="POST">
                                            <div class="d-flex justify-content-center flex-column mt-4 mb-3">
                                                <input type="hidden" name="pid" id="pid" value="<%=data1._id%>">
                                                <input type="hidden" name="doc_id" id="doc_id" value="<%=data2[i]._id%>">
                                                <input type="submit" class="btn btn-lg btn-success" value="Get Appointment">
                                            </div>
                                        </form>
                                        
                                    </div>
                                  </div>
                                <%}%>
                            </div>
                            <div class="mt-2 mb-5">
                                <p class="text-danger text-center fw-semibold fs-6"><%=error_doc%></p>
                              </div>
                <%}else{%>
                    <h1>Data not found</h1>
                <%}%>
    </main>
<%-include('../includes/footer.ejs')%>
<div class="container-fluid footer2">
