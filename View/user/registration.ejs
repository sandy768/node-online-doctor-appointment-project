<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/css/registration.css">
<title>
    <%=title%>
</title>
</head>
<body>
    <main>
        <div class="reg">
                <div class="form1">
                    <form action="/user/postreg" method="POST" enctype="multipart/form-data" autocomplete="off">
                        <h2 class="text-center fw-semibold mb-5 para1">Sign Up</h2>
                        <div class="mb-3">
                            <p class="text-success text-center fw-semibold fs-6"><%=email_success%></p>
                        </div>
                        <div class="mb-3">
                            <p class="text-danger text-center fw-semibold fs-6"><%=error_mail%></p>
                        </div>
                        <div class="mb-3">
                            <p class="text-danger text-center fw-semibold fs-6"><%=error_verify%></p>
                        </div>
                        <div class="mb-3">
                            <label for="patient_name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="patient_name" id="patient_name" placeholder="Your Name">
                        </div>
                        <div class="mb-3">
                            <label for="patient_age" class="form-label">Age</label>
                            <input type="number" class="form-control" name="patient_age" id="patient_age" placeholder="Your Age">
                        </div>
                        <div class="mb-3">
                            <label for="patient_gender" class="form-label">Gender</label>
                            <div class="mb-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="patient_gender" id="patient_gender" value="male">
                                    <label class="form-check-label" for="patient_gender">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="patient_gender" id="patient_gender" value="female">
                                    <label class="form-check-label" for="patient_gender">Female</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="patient_gender" id="patient_gender" value="others">
                                    <label class="form-check-label" for="patient_gender">Others</label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="patient_city" class="form-label">City</label>
                            <input type="text" class="form-control" name="patient_city" id="patient_city" placeholder="Your City (e.g. Kolkata)">
                        </div>
                        <div class="mb-3">
                            <label for="patient_email" class="form-label">Email Id</label>
                            <input type="email" class="form-control" name="patient_email" id="patient_email" placeholder="Your Email Id (e.g. abc@gmail.com)">
                        </div>
                        <div class="mb-3">
                            <label for="patient_password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="patient_password" id="patient_password" placeholder="Set Your Password">
                        </div>
                        <div class="mb-3">
                            <label for="patient_photo" class="form-label">Upload Photo</label>
                            <input type="file" class="form-control" name="patient_photo" id="patient_photo">
                        </div>
                        <div class="mb-3">
                            <label for="patient_docs" class="form-label">Upload Documents (Maximum two)</label>
                            <input type="file" class="form-control" name="patient_docs" id="patient_docs" multiple>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn1 mt-3 form-control">Register</button>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="/user/home" class="mt-4">Back to Home Page</a>
                        </div>
                    </form>
                </div>
            </div>
            </div>
            
       
        
    </main>