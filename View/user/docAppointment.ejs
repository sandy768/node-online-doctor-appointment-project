<%-include('../includes/header.ejs')%>
<title>
    <%=title%>
</title>
</head>
<body>
    <main>
        
        <h1 class="text-center text-success fw-bold mt-5 mb-3">Get Your Appointment</h1>
        <div class="mx-5 mt-5 mb-5">
        <form action="/user/postappointment" method="POST">
            <input type="hidden" name="pid" id="pid" value="<%=data2._id%>">
            <input type="hidden" name="doc_id" id="doc_id" value="<%=data1._id%>">
                <div class="mt-3 mb-3">
                    <label for="patient_name" class="form-label">Patient Name</label>
                    <input type="text" class="form-control" name="patient_name" id="patient_name" value="<%=data2.patient_name%>" readonly>
                </div>
                <div class="mt-3 mb-3">
                    <label for="doc_name" class="form-label">Doctor Name</label>
                    <input type="text" class="form-control" name="doc_name" id="doc_name" value="<%=data1.doc_name%>" readonly>
                </div>
                <div class="mt-3 mb-3">
                    <label for="doc_specialization" class="form-label">Specialization</label>
                    <input type="text" class="form-control" name="doc_specialization" id="doc_specialization" value="<%=data1.doc_specialization%>" readonly>
                </div>
                <div class="mt-3 mb-3">
                    <label for="doc_fees" class="form-label">Doctor Fees</label>
                    <input type="text" class="form-control" name="doc_fees" id="doc_fees" value="â‚¹<%=data1.doc_fees%>" readonly>
                </div>
                <div class="mt-3 mb-3">
                        <div class="mb-2">
                            <label for="doc_fees" class="form-label">Select Appointment Day</label>
                        </div>
                        <div>
                            <select class="form-select" aria-label="Default select example" name="appointment_day" id="appointment_day" >
                                <option selected>---Select Appointment Day---</option>
                                <%for(let i in data1.doc_visit_days){%>
                                <option value="<%=data1.doc_visit_days[i]%>"><%=data1.doc_visit_days[i]%></option>
                                <%}%>
                              </select>
                        </div>
                </div>
                <div class="mt-3 mb-3">
                    <div class="mb-2">
                        <label for="doc_fees" class="form-label">Select Appointment Time</label>
                    </div>
                    <div>
                        <select class="form-select" aria-label="Default select example" name="appointment_time" id="appointment_time">
                            <option selected>---Select Appointment Time---</option>
                            <%for(let i in data1.doc_visit_time){%>
                            <option value="<%=data1.doc_visit_time[i]%>"><%=data1.doc_visit_time[i]%></option>
                            <%}%>
                          </select>
                    </div>

            </div>
                <div class="d-flex justify-content-center mt-5 mb-5">
                    <input type="submit" class="btn btn-lg btn-success" value="Book Appointment">
                </div>
        </form>
        </div>
            
    </main>