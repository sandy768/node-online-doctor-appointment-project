<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/css/appointment.css">
<title>
    <%=title%>
</title>
</head>
<body>
    <main>
        <div class="appointment">
            <div class="form1">
                <form action="/user/postappointment" method="POST">
                    <h2 class="text-center para1 fw-semibold mt-4 mb-4">Get Your Appointment</h2>
                    <input type="hidden" name="pid" id="pid" value="<%=data2._id%>">
                    <input type="hidden" name="doc_id" id="doc_id" value="<%=data1._id%>">
                        <div class="mt-3 mb-3">
                            <label for="patient_name" class="form-label">Patient Name</label>
                            <input type="text" class="form-control" name="patient_name" id="patient_name" value="<%=data2.fname.charAt(0).toUpperCase()+data2.fname.slice(1)%> <%=data2.lname.charAt(0).toUpperCase()+data2.lname.slice(1)%>" readonly>
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="doc_name" class="form-label">Doctor Name</label>
                            <input type="text" class="form-control" name="doc_name" id="doc_name" value="<%=data1.fname.charAt(0).toUpperCase()+data1.fname.slice(1)%> <%=data1.lname.charAt(0).toUpperCase()+data1.lname.slice(1)%>" readonly>
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="doc_specialization" class="form-label">Specialization</label>
                            <input type="text" class="form-control" name="doc_specialization" id="doc_specialization" value="<%=data1.doc_specialization.charAt(0).toUpperCase()+data1.doc_specialization.slice(1)%>" readonly>
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="doc_fees" class="form-label">Doctor Fees</label>
                            <input type="text" class="form-control" name="doc_fees" id="doc_fees" value="â‚¹<%=data1.doc_fees%>" readonly>
                        </div>
                        <div class="mt-3 mb-3">
                                <div class="mb-2">
                                    <label for="doc_fees" class="form-label">Select Appointment Day</label>
                                </div>
                                <div>
                                    <select class="form-select" aria-label="Default select example" name="appointment_day" id="appointment_day" >
                                        <option selected>---Select Appointment Day---</option>
                                        <%for(let i in data1.doc_visit_days){%>
                                        <option value="<%=data1.doc_visit_days[i].charAt(0).toUpperCase()+data1.doc_visit_days[i].slice(1)%>"><%=data1.doc_visit_days[i].charAt(0).toUpperCase()+data1.doc_visit_days[i].slice(1)%></option>
                                        <%}%>
                                      </select>
                                </div>
                        </div>
                        <div class="mt-3 mb-3">
                            <div class="mb-2">
                                <label for="doc_fees" class="form-label">Select Appointment Time</label>
                            </div>
                            <div>
                                <select class="form-select" aria-label="Default select example" name="appointment_time" id="appointment_time">
                                    <option selected>---Select Appointment Time---</option>
                                    <%for(let i in data1.doc_visit_time){%>
                                    <option value="<%=data1.doc_visit_time[i]%>"><%=data1.doc_visit_time[i]%></option>
                                    <%}%>
                                  </select>
                            </div>
        
                    </div>
                        <div class="d-flex justify-content-center mt-5 mb-5">
                            <input type="submit" class="btn btn-lg btn1 form-control" value="Book Appointment">
                        </div>
                </form>
                </div>
        </div>
        
            
    </main>