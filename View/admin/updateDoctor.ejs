<%-include('../includes/header.ejs')%>
<link rel="stylesheet" href="/js/multiselect.js">
<title>
    <%=title%>
</title>
</head>
<body>
    <%-include('../includes/nav_admin.ejs')%>
    <main>
        <h1 class="text-center text-success fw-bold mt-3 mb-2">For Admin Only</h1>
        <h2 class="text-center text-secondary fw-semibold mb-3">Update Doctor Details</h2>
        <div class="mt-5 mb-5 mx-3">
            <form action="/admin/updateddetails" method="POST" enctype="multipart/form-data" autocomplete="off">
                <input type="hidden" name="up_doc_id" id="up_doc_id" value="<%=data._id%>">
                <div class="mb-3">
                  <label for="up_fname" class="form-label">Doctor First Name</label>
                  <input type="text" class="form-control" name="up_fname" id="up_fname" value="<%=data.fname%>">
                </div>
                <div class="mb-3">
                  <label for="up_lname" class="form-label">Doctor Last Name</label>
                  <input type="text" class="form-control" name="up_lname" id="up_lname" value="<%=data.lname%>">
                </div>
                <div class="mb-3">
                    <label for="up_doc_degree" class="form-label">Doctor Degree</label>
                    <input type="text" class="form-control" name="up_doc_degree" id="up_doc_degree" value="<%=data.doc_degree%>">
                </div>
                <div class="mb-3">
                    <label for="up_doc_experience" class="form-label">Doctor Experience</label>
                    <input type="number" class="form-control" name="up_doc_experience" id="up_doc_experience" value="<%=data.doc_experience%> Years">
                </div>
                <div class="mb-3">
                    <label for="up_doc_specialization" class="form-label">Doctor Specialization</label>
                    <input type="text" class="form-control" name="up_doc_specialization" id="up_doc_specialization" value="<%=data.doc_specialization%>">
                </div>
                <div class="mb-3">
                    <label for="doc_visit_days" class="form-label">Visit Days</label>
                    <div class="mt-2">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="monday">
                            <label class="form-check-label" for="up_doc_visit_days">Monday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="tuesday">
                            <label class="form-check-label" for="up_doc_visit_days">Tuesday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="wednesday">
                            <label class="form-check-label" for="up_doc_visit_days">Wednesday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="thursday">
                            <label class="form-check-label" for="up_doc_visit_days">Thursday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="friday">
                            <label class="form-check-label" for="up_doc_visit_days">Friday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="saturday">
                            <label class="form-check-label" for="up_doc_visit_days">Saturday</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="up_doc_visit_days" id="up_doc_visit_days" value="sunday">
                            <label class="form-check-label" for="up_doc_visit_days">Sunday</label>
                          </div>      
                    </div>
                    <div class="mt-3 mb-3">
                        <h5 class="text-secondary bg-warning px-5 py-1">***Previously visit days--- <span class="text-success"><%=data.doc_visit_days%></span></h5>
                    </div>
                </div>
                <div class="mb-3">
                  <label for="doc_visit_days" class="form-label">Visiting Time</label>
                  <div class="mt-2">
                      <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="11 a.m.">
                          <label class="form-check-label" for="up_doc_visit_time">11 AM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="12 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">12 PM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="1 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">1 PM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="2 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">2 PM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="4 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">4 PM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="6 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">6 PM</label>
                        </div>
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="checkbox" name="up_doc_visit_time" id="up_doc_visit_time" value="8 p.m.">
                          <label class="form-check-label" for="up_doc_visit_time">8 PM</label>
                        </div>
                  </div>
                  <div class="mt-3 mb-3">
                    <h5 class="text-secondary bg-warning px-5 py-1">***Previously visiting times--- <span class="text-success"><%=data.doc_visit_time%></span></h5>
                </div>
              </div>
                <div class="mb-3">
                    <label for="up_doc_fees" class="form-label">Doctor Fees (In â‚¹)</label>
                    <input type="number" class="form-control" name="up_doc_fees" id="up_doc_fees" value="<%=data.doc_fees%>">
                </div>
                <div class="mb-3">
                  <label for="up_doc_email" class="form-label">Doctor Email</label>
                  <input type="email" class="form-control" name="up_doc_email" id="up_doc_email" value="<%=data.doc_email%>">
              </div>
                <div class="mb-3">
                    <label for="doc_photo" class="form-label">Doctor Photo</label>
                    <img src="/doctors/<%=data.doc_photo%>" alt="..." height="50px" width="50px">
                    <input type="file" class="form-control" name="doc_photo" id="doc_photo">
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg btn-primary">Update Doctor</button>
                </div>
              </form>
        </div>
    </main>
